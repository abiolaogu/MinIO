[Unit]
Description=MinIO Enterprise Incremental Backup
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/minio-enterprise
EnvironmentFile=/opt/minio-enterprise/scripts/backup/backup-config.env
ExecStart=/opt/minio-enterprise/scripts/backup/backup.sh incremental ${BACKUP_DESTINATION}
StandardOutput=journal
StandardError=journal
SyslogIdentifier=minio-backup-incremental

# Restart policy
Restart=on-failure
RestartSec=5m

[Install]
WantedBy=multi-user.target
