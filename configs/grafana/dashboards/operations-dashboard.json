{
  "dashboard": {
    "id": null,
    "uid": "minio-operations",
    "title": "MinIO Enterprise - Operations Dashboard",
    "tags": ["minio", "operations", "enterprise"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "System Resources - CPU & Memory",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "(process_resident_memory_bytes / 1024 / 1024 / 1024)",
            "legendFormat": "Memory Usage (GB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU %"
          },
          {
            "format": "gbytes",
            "label": "Memory"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "avg": true
        },
        "alert": {
          "name": "High CPU Usage",
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "message": "CPU usage exceeded 80%",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "Disk I/O",
        "targets": [
          {
            "expr": "rate(minio_disk_read_bytes_total[1m])",
            "legendFormat": "Read Bytes/sec",
            "refId": "A"
          },
          {
            "expr": "rate(minio_disk_write_bytes_total[1m])",
            "legendFormat": "Write Bytes/sec",
            "refId": "B"
          },
          {
            "expr": "rate(minio_disk_read_ops_total[1m])",
            "legendFormat": "Read Ops/sec",
            "refId": "C"
          },
          {
            "expr": "rate(minio_disk_write_ops_total[1m])",
            "legendFormat": "Write Ops/sec",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Throughput"
          },
          {
            "format": "ops",
            "label": "Operations"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "graph",
        "title": "Network Bandwidth",
        "targets": [
          {
            "expr": "rate(minio_network_received_bytes_total[1m])",
            "legendFormat": "Received Bytes/sec",
            "refId": "A"
          },
          {
            "expr": "rate(minio_network_transmitted_bytes_total[1m])",
            "legendFormat": "Transmitted Bytes/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Bandwidth"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "avg": true
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "graph",
        "title": "Error Rate Over Time",
        "targets": [
          {
            "expr": "rate(minio_errors_total[5m])",
            "legendFormat": "Total Errors/sec",
            "refId": "A"
          },
          {
            "expr": "sum by (error_type) (rate(minio_errors_total[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Errors/sec"
          }
        ],
        "legend": {
          "show": true,
          "values": true
        },
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "message": "Error rate exceeded 10 errors/sec",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "type": "stat",
        "title": "Service Uptime",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 3600
                },
                {
                  "color": "green",
                  "value": 86400
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "type": "stat",
        "title": "Active Goroutines",
        "targets": [
          {
            "expr": "go_goroutines",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 10000
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "type": "stat",
        "title": "GC Pause Time",
        "targets": [
          {
            "expr": "rate(go_gc_duration_seconds_sum[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "type": "stat",
        "title": "System Availability",
        "targets": [
          {
            "expr": "(1 - (rate(minio_errors_total[1h]) / rate(minio_requests_total[1h]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 99
                },
                {
                  "color": "green",
                  "value": 99.9
                }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 22
        },
        "type": "graph",
        "title": "Request Queue Depth",
        "targets": [
          {
            "expr": "minio_request_queue_depth",
            "legendFormat": "Queue Depth",
            "refId": "A"
          },
          {
            "expr": "minio_worker_pool_active",
            "legendFormat": "Active Workers",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Count"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 10,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 22
        },
        "type": "graph",
        "title": "Connection Pool Stats",
        "targets": [
          {
            "expr": "minio_connection_pool_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "minio_connection_pool_idle",
            "legendFormat": "Idle Connections",
            "refId": "B"
          },
          {
            "expr": "minio_connection_pool_wait_duration",
            "legendFormat": "Wait Duration (ms)",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "ms",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 11,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 30
        },
        "type": "graph",
        "title": "Service Health by Node",
        "targets": [
          {
            "expr": "up{job=\"minio\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Status (1=UP, 0=DOWN)",
            "min": 0,
            "max": 1
          }
        ],
        "legend": {
          "show": true,
          "values": false
        },
        "alert": {
          "name": "Node Down",
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "1m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "min"
              },
              "type": "query"
            }
          ],
          "frequency": "30s",
          "handler": 1,
          "message": "MinIO node is down",
          "noDataState": "alerting",
          "executionErrorState": "alerting"
        }
      }
    ],
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"High CPU Usage|High Error Rate|Node Down\",alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Operations Alerts",
          "tagKeys": "alertname,severity"
        },
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(process_start_time_seconds[1h]) > 0",
          "iconColor": "blue",
          "name": "Service Restarts",
          "tagKeys": "instance"
        }
      ]
    }
  }
}
