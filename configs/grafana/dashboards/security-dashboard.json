{
  "dashboard": {
    "id": null,
    "uid": "minio-security",
    "title": "MinIO Enterprise - Security Dashboard",
    "tags": ["minio", "security", "enterprise"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "Authentication Events",
        "targets": [
          {
            "expr": "rate(minio_auth_success_total[5m])",
            "legendFormat": "Successful Authentications",
            "refId": "A"
          },
          {
            "expr": "rate(minio_auth_failed_total[5m])",
            "legendFormat": "Failed Authentications",
            "refId": "B"
          },
          {
            "expr": "(rate(minio_auth_failed_total[5m]) / (rate(minio_auth_success_total[5m]) + rate(minio_auth_failed_total[5m]))) * 100",
            "legendFormat": "Failure Rate %",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          },
          {
            "format": "percent"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "avg": true
        },
        "alert": {
          "name": "High Authentication Failure Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [20],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["C", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "message": "Authentication failure rate exceeded 20% - possible brute force attack",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "Access Pattern Analysis",
        "targets": [
          {
            "expr": "sum by (tenant_id) (rate(minio_requests_total[5m]))",
            "legendFormat": "Tenant {{tenant_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "type": "graph",
        "title": "Security Events by Type",
        "targets": [
          {
            "expr": "rate(minio_security_events_total{event_type=\"unauthorized_access\"}[5m])",
            "legendFormat": "Unauthorized Access",
            "refId": "A"
          },
          {
            "expr": "rate(minio_security_events_total{event_type=\"invalid_token\"}[5m])",
            "legendFormat": "Invalid Token",
            "refId": "B"
          },
          {
            "expr": "rate(minio_security_events_total{event_type=\"quota_exceeded\"}[5m])",
            "legendFormat": "Quota Exceeded",
            "refId": "C"
          },
          {
            "expr": "rate(minio_security_events_total{event_type=\"rate_limit_hit\"}[5m])",
            "legendFormat": "Rate Limit Hit",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          }
        ],
        "legend": {
          "show": true,
          "values": true
        },
        "alert": {
          "name": "High Security Events",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "or"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "message": "Elevated security events detected",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "type": "graph",
        "title": "API Error Rate by Code",
        "targets": [
          {
            "expr": "sum by (status_code) (rate(minio_http_requests_total{status_code=~\"4..\"}[5m]))",
            "legendFormat": "4xx - {{status_code}}",
            "refId": "A"
          },
          {
            "expr": "sum by (status_code) (rate(minio_http_requests_total{status_code=~\"5..\"}[5m]))",
            "legendFormat": "5xx - {{status_code}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          }
        ],
        "legend": {
          "show": true,
          "values": true
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "type": "stat",
        "title": "Active Sessions",
        "targets": [
          {
            "expr": "minio_active_sessions_total",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "type": "stat",
        "title": "Failed Login Attempts (Last Hour)",
        "targets": [
          {
            "expr": "increase(minio_auth_failed_total[1h])",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 200
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "type": "stat",
        "title": "Rate Limited Requests",
        "targets": [
          {
            "expr": "increase(minio_rate_limited_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "type": "stat",
        "title": "Security Score",
        "targets": [
          {
            "expr": "100 - (rate(minio_security_events_total[1h]) * 10)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "green",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 22
        },
        "type": "table",
        "title": "Recent Security Events",
        "targets": [
          {
            "expr": "topk(10, minio_security_events_total)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": []
        }
      },
      {
        "id": 10,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 22
        },
        "type": "graph",
        "title": "Audit Log Volume",
        "targets": [
          {
            "expr": "rate(minio_audit_log_entries_total[5m])",
            "legendFormat": "Audit Log Entries/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Entries/sec"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"High Authentication Failure Rate|High Security Events\",alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Security Alerts",
          "tagKeys": "alertname,severity"
        }
      ]
    }
  }
}
